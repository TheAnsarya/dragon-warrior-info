# EditorConfig is awesome: https://EditorConfig.org
# Top-most EditorConfig file for FFMQ SNES Development
root = true

# All files - default settings
[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

# Markdown files - preserve trailing whitespace for line breaks
[*.md]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false

# Markdownlint configuration
# MD010/no-hard-tabs: DISABLED - We use tabs everywhere
markdownlint.MD010 = false
# MD032/blanks-around-lists: Lists should be surrounded by blank lines
markdownlint.MD032 = true
# MD040/fenced-code-language: Fenced code blocks should have a language specified
markdownlint.MD040 = true
# MD041/first-line-heading: First line should be a top-level heading
markdownlint.MD041 = true
# MD047/single-trailing-newline: Files should end with a single newline
markdownlint.MD047 = true

# YAML files (CI/CD configurations)
[*.{yml,yaml}]
indent_style = tab
indent_size = 4

# JSON files (package configs, debug configs)
[*.json]
indent_style = tab
indent_size = 4

# Python files (development tools)
[*.py]
indent_style = tab
indent_size = 4
max_line_length = 120

# Assembly files (SNES source code)
[*.{asm,s,inc}]
indent_style = tab
indent_size = 4

# C/C++ files (potential future tools)
[*.{c,cpp,h,hpp}]
indent_style = tab
indent_size = 4

# C# files (asset extraction tools)
[*.cs]
indent_style = tab
indent_size = 4

# Makefile (must use tabs)
[Makefile]
indent_style = tab
indent_size = 4

# Batch files (Windows scripts)
[*.bat]
indent_style = tab
indent_size = 4
end_of_line = crlf

# PowerShell files (Windows scripts)
[*.ps1]
indent_style = tab
indent_size = 4
end_of_line = crlf

# Lua files (MesenS test scripts)
[*.lua]
indent_style = tab
indent_size = 4

# Shell scripts (Unix/Linux compatibility)
[*.sh]
indent_style = tab
indent_size = 4
end_of_line = lf

# Text files (documentation, notes)
[*.txt]
indent_style = tab
indent_size = 4

# Table files (SNES character encoding)
[*.tbl]
indent_style = tab
indent_size = 4

# Config files
[*.{cfg,conf,ini}]
indent_style = tab
indent_size = 4

# Log files (preserve as-is)
[*.log]
insert_final_newline = false
trim_trailing_whitespace = false
